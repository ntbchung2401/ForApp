@model IEnumerable<ForApp.Models.OrderDetail>

@{
	ViewData["Title"] = "Index";
}

<h1>Order details </h1>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Order.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Book.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Book.Price)
			</th>
			<th>
				Total
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Order.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Book.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Book.Price)
				</td>
				<td>
					<span class='table-sub-total'>@(item.Book.Price * item.Quantity)</span>
				</td>
			</tr>
		}
	</tbody>
</table>
