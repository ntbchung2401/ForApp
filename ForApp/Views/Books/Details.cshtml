@model ForApp.Models.Book

@{
	ViewData["Title"] = "Details";
	Layout = "_Layout";
}
<div class="container">
	<h3 class="display-4">Book Details</h3>
	<div class="row">
		<div class="col-md-6">
			<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="~/img/55787.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="@Model.ImgUrl" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="@Model.ImgUrl" alt="Third slide">
    </div>
  </div>
</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<h1>@Model.Title</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-primary">
					<span class="label label-primary">By: </span>
					<span class="monospaced">@Model.Title</span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<p class="description">
						@Model.Desc
					</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<button class="btn btn-outline-primary">Add To Cart</button>
				</div>
			</div>
			<ul class="list-group">
				<li class="list-group-item"><span class="font-weight-bold">Category -</span>@Model.Category</li>
				<li class="list-group-item"><span class="font-weight-bold">Total Pages -</span>@Model.Pages</li>
				<li class="list-group-item"><span class="font-weight-bold">Price -</span>@Model.Price</li>
			</ul>
		</div>
	</div>
</div>

